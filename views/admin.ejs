  <!-- Section for Posting a New Job -->
  <section id="post-job">
    <h4>Add New Job</h4>
    <form action="admin/jobs/add" method="POST" class="form-horizontal">
        <div class="form-group">
      <label class="form-control">Title: <input type="text" name="title" required></label><br>
      <label class="form-control">Location: <input type="text" name="location" required></label><br>
      <label class="form-control">Type: <input type="text" name="type" required></label><br>
      <label class="form-control">Description: <textarea name="description" required></textarea></label><br>
      <label class="form-control">Key Responsibilities: <input type="text" name="responsibiliti" placeholder="Comma-separated" required></label><br>
      <label class="form-control">Skills: <input type="text" name="skills" placeholder="Comma-separated" required></label><br>
      <label class="form-control">Qualifications: <input type="text" name="qualifications" placeholder="Comma-separated" required></label><br>
      <label class="form-control">Benefits: <input type="text" name="benefits" placeholder="Comma-separated" required></label><br>
      <button type="submit">Add Job</button>
    </div>
    </form>
  </section>
  </div>
<br>
  <div class="auto-container">

  <hr>

  <!-- Section for Viewing Job Applications -->
  <button id="refreshApplications">Refresh Applications</button>
  <section id="view-applications">

    <h5>Job Applications</h5>
    <% if (applications.length === 0) { %>
        <p>No applicants available now.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Qualification</th>
              <th>Experience</th>
              <th>Resume</th>
              <th>Notes</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% applications.forEach(application => { %>
              <tr>
                <td><%= application.first_name %></td>
                <td><%= application.last_name %></td>
                <td><%= application.email %></td>
                <td><%= application.phone %></td>
                <td><%= application.qualification %></td>
                <td><%= application.experience %></td>
                <td><a href="<%= application.resume_url %>" target="_blank">View Resume</a></td>
                <td><%= application.notes || "N/A" %></td>
                <td><%= application.status || "Pending" %></td>
                <td>
                  <form action="/admin/approve/<%= application.id %>" method="POST">
                    <button type="submit">Approve</button>
                  </form>
                  <form action="/admin/reject/<%= application.id %>" method="POST">
                    <button type="submit">Reject</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
  </section>
  </div>
  <br>
  <hr>
  <div class="auto-container">

  <!-- Section for Viewing Posted Jobs -->
  <section id="view-jobs">
    <h5>Posted Jobs</h5>
    <% if (jobs.length === 0) { %>
        <p>No jobs available now.</p>
      <% } else { %>
        <ul>
          <% jobs.forEach(job => { %>
            <li>
              <h6><%= job.title %></h6>
              <p><strong>Location:</strong> <%= job.location %></p>
              <p><strong>Type:</strong> <%= job.type %></p>
              <p><strong>Description:</strong> <%= job.jobDescription %></p>
              <p><strong>Posted On:</strong> <%= new Date(job.postingDate).toLocaleString() %></p>
              
              <!-- Delete Job Form -->
              <form action="admin/jobs/delete" method="POST">
                <input type="hidden" name="id" value="<%= job.id %>">
                <button type="submit">Delete Job</button>
              </form>
            </li>
            <br>
          <% }); %>
        </ul>
      <% } %>
  </section>
