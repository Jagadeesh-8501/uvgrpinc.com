        // Function to fetch job details based on the 'job' parameter in the URL
        function loadJobDetails() {
            const urlParams = new URLSearchParams(window.location.search);
            const jobId = urlParams.get('job'); // Get the job ID from the URL

            if (!jobId) {
                // If no job ID is present, display an error or redirect
                alert('Job ID is missing in the URL');
                return;
            }

            // Fetch jobs data from the JSON file (this needs to be the correct path to your jobs.json)
            fetch('jobs.json')
                .then(response => response.json())
                .then(data => {
                    const job = data.jobs.find(job => job.id === jobId); // Find the job with the matching ID

                    if (job) {
                        // Populate the job details in the page
                        document.getElementById('job-title').textContent = job.title;
                        document.getElementById('job-location').textContent = `Location: ${job.location}`;
